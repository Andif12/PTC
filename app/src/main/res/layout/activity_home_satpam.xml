<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeSatpamActivity"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/fotoprofil"
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foto" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang, Nama Pengguna"
        android:textSize="15dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/anton"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/fotoprofil"
        app:layout_constraintTop_toTopOf="@+id/fotoprofil"/>

    <TextView
        android:id="@+id/satpam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Petugas Keamanan"
        android:layout_marginStart="105dp"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/antic_slab"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/fotoprofil"
        app:layout_constraintTop_toTopOf="@+id/fotoprofil"/>

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/satpam"/>

    <ImageView
        android:id="@+id/livestream"
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:srcCompat="@drawable/live" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulasi Pemantauan"
        app:layout_constraintEnd_toEndOf="@id/livestream"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="@id/livestream"
        app:layout_constraintTop_toBottomOf="@id/livestream" />

    <ImageView
        android:id="@+id/ceklaporan"
        android:layout_width="130dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/livestream"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:srcCompat="@drawable/ceklaporan" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cek Laporan"
        app:layout_constraintTop_toBottomOf="@id/ceklaporan"
        app:layout_constraintEnd_toEndOf="@id/ceklaporan"
        app:layout_constraintStart_toStartOf="@id/ceklaporan" />

    <ImageView
        android:id="@+id/logkejadian"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_marginRight="190dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/livestream"
        app:srcCompat="@drawable/logkejadian" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Kejadian"
        app:layout_constraintEnd_toEndOf="@id/logkejadian"
        app:layout_constraintStart_toStartOf="@id/logkejadian"
        app:layout_constraintTop_toBottomOf="@id/logkejadian" />

    <ImageView
        android:id="@+id/laporan"
        android:layout_width="130dp"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/livestream"
        app:layout_constraintTop_toBottomOf="@+id/ceklaporan"
        app:srcCompat="@drawable/laporan" />

    <TextView
        android:id="@+id/title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim Notifikasi"
        app:layout_constraintEnd_toEndOf="@id/laporan"
        app:layout_constraintStart_toStartOf="@id/laporan"
        app:layout_constraintTop_toBottomOf="@id/laporan" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings"/>

    <Button
        android:id="@+id/emergency"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/red"
        android:textAlignment="center"
        android:text="EMERGENCY BUTTON"
        android:textColor="@color/white"
        android:fontFamily="@font/black_han_sans"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/laporan" />
</androidx.constraintlayout.widget.ConstraintLayout>