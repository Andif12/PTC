<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/gray">

    <TextView
        android:id="@+id/tombolkembali"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Settings"
        android:textSize="20sp"
        android:fontFamily="@font/antic_slab"
        app:layout_constraintStart_toEndOf="@id/tombolkembali"
        app:layout_constraintTop_toTopOf="@id/tombolkembali"/>

    <TextView
        android:id="@+id/account"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="Account Settings"
        android:gravity="start"
        android:fontFamily="@font/anton"
        app:layout_constraintTop_toBottomOf="@id/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/change"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="Change Your Password"
        android:gravity="start"
        android:fontFamily="@font/antic_slab"
        app:layout_constraintTop_toBottomOf="@id/account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tombolgo1"
        android:layout_width="30dp"
        android:layout_height="30sp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/change"
        app:layout_constraintBottom_toBottomOf="@id/change"/>


    <TextView
        android:id="@+id/more"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="More"
        android:gravity="start"
        android:fontFamily="@font/anton"
        app:layout_constraintTop_toBottomOf="@id/change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/privacy"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="Privacy Police"
        android:gravity="start"
        android:fontFamily="@font/antic_slab"
        app:layout_constraintTop_toBottomOf="@id/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tombolgo2"
        android:layout_width="30dp"
        android:layout_height="30sp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/privacy"
        app:layout_constraintBottom_toBottomOf="@id/privacy"/>

    <TextView
        android:id="@+id/about"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="About Us"
        android:gravity="start"
        android:fontFamily="@font/antic_slab"
        app:layout_constraintTop_toBottomOf="@id/privacy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tombolgo3"
        android:layout_width="30dp"
        android:layout_height="30sp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/about"
        app:layout_constraintBottom_toBottomOf="@id/about"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="Log Out"
        android:gravity="start"
        android:fontFamily="@font/antic_slab"
        app:layout_constraintTop_toBottomOf="@id/about"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tombolkeluar"
        android:layout_width="30dp"
        android:layout_height="30sp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/baseline_logout_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/logout"
        app:layout_constraintBottom_toBottomOf="@id/logout"/>

</androidx.constraintlayout.widget.ConstraintLayout>