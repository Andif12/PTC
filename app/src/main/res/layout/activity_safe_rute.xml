<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SafeRuteActivity"
    android:background="@color/gray">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tombol Kembali -->
            <TextView
                android:id="@+id/tombolkembali"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/baseline_arrow_back_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Judul Safe Rute -->
            <TextView
                android:id="@+id/saferute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Denah Kampus"
                android:textSize="20sp"
                android:fontFamily="@font/antic_slab"
                app:layout_constraintStart_toEndOf="@id/tombolkembali"
                app:layout_constraintTop_toTopOf="@id/tombolkembali" />

            <!-- Nama Lantai 1 -->
            <TextView
                android:id="@+id/namalantai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Lantai 1"
                android:textSize="20sp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/antic_slab"
                app:layout_constraintStart_toEndOf="@id/tombolkembali"
                app:layout_constraintTop_toBottomOf="@id/tombolkembali" />

            <!-- Gambar Lantai 1 -->
            <ImageView
                android:id="@+id/lantai1"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:background="@drawable/lantai1"
                android:layout_marginTop="80dp"
                app:layout_constraintStart_toEndOf="@id/tombolkembali"
                app:layout_constraintTop_toBottomOf="@id/tombolkembali" />

            <!-- Nama Lantai 2 -->
            <TextView
                android:id="@+id/namalantai2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Lantai 2"
                android:textSize="20sp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/antic_slab"
                app:layout_constraintStart_toEndOf="@id/tombolkembali"
                app:layout_constraintTop_toBottomOf="@id/lantai1" />

            <!-- Gambar Lantai 2 -->
            <ImageView
                android:id="@+id/lantai2"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:background="@drawable/lantai2"
                android:layout_marginTop="80dp"
                app:layout_constraintStart_toEndOf="@id/tombolkembali"
                app:layout_constraintTop_toBottomOf="@id/lantai1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
