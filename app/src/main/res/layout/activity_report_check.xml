<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportCheckActivity"
    android:background="@color/gray">

    <TextView
        android:id="@+id/tombolkembali"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Cek Laporan"
        android:textSize="20sp"
        android:fontFamily="@font/antic_slab"
        app:layout_constraintStart_toEndOf="@id/tombolkembali"
        app:layout_constraintTop_toTopOf="@id/tombolkembali" />

    <TextView
        android:id="@+id/lapor"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:gravity="start"
        android:layout_marginStart="20dp"
        android:background="@drawable/massage_background"
        app:layout_constraintTop_toBottomOf="@id/report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Set the buttons to be aligned horizontally with spacing between them -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/lapor"
        android:gravity="center">

        <Button
            android:id="@+id/btnSegeraDitangani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segera Ditangani"
            android:visibility="gone"
            android:layout_marginEnd="10dp"/> <!-- Added margin between buttons -->

        <Button
            android:id="@+id/btnDiatasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diatasi"
            android:visibility="gone"
            android:layout_marginEnd="10dp"/> <!-- Added margin between buttons -->

        <Button
            android:id="@+id/btnSelesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selesai"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
