<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/sisatubiru"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="128dp"
        android:layout_marginStart="122dp"
        android:layout_marginEnd="122dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sistemkeamanan"
        app:srcCompat="@drawable/logobiru"/>

    <TextView
        android:id="@+id/sistemkeamanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sistem Keamanan Kampus"
        android:textAlignment="center"
        android:fontFamily="@font/anton"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textmain2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sisatubiru"/>

    <TextView
        android:id="@+id/textmain2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sistem keamanan kampus menjaga keselamatan dengan deteksi cepat dan respons tanggap terhadap ancaman"
        android:textAlignment="center"
        android:fontFamily="@font/anta_regular"
        android:padding="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/sistemkeamanan"
        app:layout_constraintBottom_toTopOf="@+id/btn_masuk"/>

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginTop="70dp"
        android:text="MASUK"
        android:width="300dp"
        android:textSize="18dp"
        android:fontFamily="@font/anton"
        android:textColor="@color/white"
        android:gravity="center"
        android:backgroundTint="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/btn_daftar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textmain2"/>

    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:text="DAFTAR"
        android:width="300dp"
        android:textSize="18dp"
        android:gravity="center"
        android:fontFamily="@font/anton"
        android:textColor="@color/white"
        android:backgroundTint="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_masuk"/>

</androidx.constraintlayout.widget.ConstraintLayout>