<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/dark_blue">

    <ImageView
        android:id="@+id/LogoSisatu"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="122dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/Sisatu"
        app:srcCompat="@drawable/logo_sisatu"/>

    <TextView
        android:id="@+id/Sisatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="Sistem Identifikasi dan Surveillance Untuk Tindakan Urgent"
        android:fontFamily="@font/anta_regular"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Start"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginTop="170dp"
        android:text="MULAI"
        android:width="300dp"
        android:textSize="23dp"
        android:fontFamily="@font/black_han_sans"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/btn_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sisatu"/>

</androidx.constraintlayout.widget.ConstraintLayout>