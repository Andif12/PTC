<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PemantauanLiveActivity"
    android:background="@color/gray">

    <!-- Tombol kembali -->
    <TextView
        android:id="@+id/tombolkembali"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Judul Feed Live -->
    <TextView
        android:id="@+id/feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Simulasi Pemantauan"
        android:textSize="20sp"
        android:fontFamily="@font/antic_slab"
        app:layout_constraintStart_toEndOf="@id/tombolkembali"
        app:layout_constraintTop_toTopOf="@id/tombolkembali" />

    <TextView
        android:id="@+id/ruang1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Ruangan 1"
        android:textSize="20sp"
        android:fontFamily="@font/antic_slab"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/tombolkembali"
        app:layout_constraintTop_toBottomOf="@id/tombolkembali" />

    <!-- WebView untuk video pertama -->
    <VideoView
        android:id="@+id/VideoView"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ruang1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
